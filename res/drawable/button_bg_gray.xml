<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- 圆角      无边框     背景灰色 -->

    <!-- 四个角的弯曲程度 -->
    <corners android:radius="8dp" />

    <!-- 边框宽度及颜色 -->
    <stroke
        android:width="0dp"
        android:color="#009DD9" />

    <!-- 框内颜色 -->
    <solid android:color="@color/color_bcbcbc" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>