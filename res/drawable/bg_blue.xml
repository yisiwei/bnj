<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- 直角     边框蓝色     背景白色 -->

    <!-- 四个角的弯曲程度 -->
    <corners android:radius="0dp" />

    <!-- 边框宽度及颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/title_color" />

    <!-- 框内颜色 -->
    <solid android:color="#FFFFFF" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>