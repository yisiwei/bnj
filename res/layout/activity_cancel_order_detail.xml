<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical" >

    <include
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#CFCFCF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/order_number"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_detail_orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/order_number"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/order_number"
                    android:layout_below="@id/order_number"
                    android:layout_marginTop="10dp"
                    android:text="@string/order_status"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/order_status"
                    android:layout_toRightOf="@id/order_status"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CFCFCF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#CFCFCF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/cancel_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/cancel_progress"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/cancel_progress_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/cancel_progress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:background="#CFCFCF" />

                <ListView
                    android:id="@+id/cancel_order_listview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/cancel_progress_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:divider="#FFFFFFFF"
                    android:layout_marginTop="5dp" >
                </ListView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CFCFCF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#CFCFCF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/cancel_order_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/cancel_order_detail"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/cancel_order_detail_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/cancel_order_detail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:background="#CFCFCF" />

                <TextView
                    android:id="@+id/detail_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cancel_order_detail_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/order_number"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancel_order_detail_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/detail_order_number"
                    android:layout_toRightOf="@id/detail_order_number"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pay_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_order_number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pay_detail"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancel_order_detail_pay_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/pay_detail"
                    android:layout_toRightOf="@id/pay_detail"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/apply_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pay_detail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/apply_reason"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancel_order_detail_apply_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/apply_reason"
                    android:layout_toRightOf="@id/apply_reason"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/apply_reason"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/contacts"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancel_order_detail_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/contacts"
                    android:layout_toRightOf="@id/contacts"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contacts"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/contact_phone"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancel_order_detail_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/contact_phone"
                    android:layout_toRightOf="@id/contact_phone"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CFCFCF" />

            <Button
                android:id="@+id/order_tracking_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/order_button_bg"
                android:text="@string/order_tracking"
                android:textColor="#3a9be7"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>