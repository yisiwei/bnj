<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_fff"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/school_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <ImageView
        android:id="@+id/school_item_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@id/school_item_top_line"
        android:layout_margin="10dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/school_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/school_item_image"
        android:text="@string/app_name"
        android:textColor="@color/color_222"
        android:textSize="@dimen/size14" />

    <TextView
        android:id="@+id/school_item_content"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/school_item_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/school_item_image"
        android:text="@string/about_title"
        android:textColor="@color/color_999"
        android:textSize="@dimen/size14" />

    <View
        android:id="@+id/school_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/school_item_image"
        android:background="@color/line" />

</RelativeLayout>