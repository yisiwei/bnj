<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical" >

    <include
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/my_bg" >

                <LinearLayout
                    android:id="@+id/acc_unloginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/acc_login_btn"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:background="@drawable/login_btn"
                        android:contentDescription="@null" />

                    <ImageButton
                        android:id="@+id/acc_register_btn"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/registered_btn"
                        android:contentDescription="@null" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/acc_loginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/acc_account_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/my_account"
                        android:textColor="#3E3E3E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/acc_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/acc_account_hint"
                        android:padding="1dp"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/acc_order_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/acc_username"
                        android:layout_below="@id/acc_username"
                        android:layout_marginTop="10dp"
                        android:text="@string/no_sumbit_order_count"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/acc_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="4dp"
                        android:text="@string/exit"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/acc_myOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableRight="@drawable/right_arrow_item"
                android:padding="15dp"
                android:text="@string/my_order"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/acc_service_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableRight="@drawable/right_arrow_item"
                android:padding="15dp"
                android:text="@string/service_comment"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/acc_service_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableRight="@drawable/right_arrow_item"
                android:padding="15dp"
                android:text="@string/service_address"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/acc_update_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableRight="@drawable/right_arrow_item"
                android:padding="15dp"
                android:text="@string/update_password"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/acc_more_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableRight="@drawable/right_arrow_item"
                android:padding="15dp"
                android:text="@string/more_setting"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>