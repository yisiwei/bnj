<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/title_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:contentDescription="@null"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:padding="2dp" >

        <EditText
            android:id="@+id/update_pwd_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:hint="@string/old_pwd"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <EditText
            android:id="@+id/update_pwd_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:hint="@string/new_pwd"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <EditText
            android:id="@+id/update_pwd_confirm_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:hint="@string/confirm_new_pwd"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_pwd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#666666"
        android:textSize="14sp" />

    <Button
        android:id="@+id/update_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_bg_blue"
        android:text="@string/confirm"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>