<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/left_layoutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical" >

        <View
            android:id="@+id/order_tracks_item_up_line"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/order_tracks_item_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/order_tracks_do_dot" />

        <TextView
            android:id="@+id/order_tracks_item_down_line"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:background="#E5E5E5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="20dp" >

        <TextView
            android:id="@+id/order_tracks_item_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_tracks_item_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>